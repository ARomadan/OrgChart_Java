<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:sec="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<sec:http auto-config="true" use-expressions="true">
		<sec:intercept-url pattern="/app/admin*" access="hasRole('ROLE_USER')"/>
		<sec:intercept-url pattern="/app/admin*" access="hasRole('ROLE_ADMIN')" />
		<sec:form-login login-page="/app/admin/login"
			login-processing-url="/app/j_spring_security_check"
			authentication-failure-url="/app/admin/login"
			authentication-success-handler-ref="authenticationSuccessHandler" />
		<sec:logout logout-success-url="/app/admin/login"
			logout-url="/app/j_spring_security_logout"
			invalidate-session="true" />
	</sec:http>

	<sec:authentication-manager>
		<sec:authentication-provider>
		<sec:user-service>
			<sec:user name="TestAdmin" authorities="ROLE_ADMIN"  password="password" />
			<sec:user name="mcmillen" authorities="ROLE_USER" password="password"	/>
		</sec:user-service>
			<sec:jdbc-user-service data-source-ref="dataSource"
				authorities-by-username-query="select u.username, ur.authority from users u, user_roles ur where u.user_id = ur.user_id and u.username =?" />
		</sec:authentication-provider>
	</sec:authentication-manager>

	<bean id="authenticationSuccessHandler"
		class="com.systemsinmotion.orgchart.web.security.AuthenticationSuccessHandler" />

</beans>